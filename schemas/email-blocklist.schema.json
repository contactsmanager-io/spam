{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/contactsmanager-io/spam/blob/main/schemas/email-blocklist.schema.json",
  "title": "Email Blocklist Schema",
  "description": "Schema for validating email blocklist entries",
  "type": "object",
  "required": [
    "version",
    "last_updated",
    "entries"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date"
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "email",
          "confidence",
          "source",
          "description",
          "date_added"
        ],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "maxLength": 254
          },
          "confidence": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
          },
          "source": {
            "type": "string",
            "enum": [
              "user_reports",
              "spam_database",
              "government",
              "blacklist",
              "community",
              "automated",
              "example_data"
            ]
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500
          },
          "date_added": {
            "type": "string",
            "format": "date"
          },
          "report_count": {
            "type": "integer",
            "minimum": 1
          },
          "category": {
            "type": "string",
            "enum": [
              "spam",
              "phishing",
              "newsletter-spam",
              "marketing",
              "scam",
              "malware",
              "automated",
              "suspicious"
            ]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
