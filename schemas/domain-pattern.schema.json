{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/contactsmanager-io/spam/blob/main/schemas/domain-pattern.schema.json",
  "title": "Domain Pattern Schema",
  "description": "Schema for validating domain pattern entries",
  "type": "object",
  "required": ["version", "last_updated", "patterns"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date"
    },
    "patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "regex", "description", "confidence", "category"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "minLength": 1,
            "maxLength": 50
          },
          "regex": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
          },
          "confidence": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
          },
          "category": {
            "type": "string",
            "enum": [
              "suspicious",
              "free-domain",
              "low-reputation",
              "temporary",
              "parked",
              "malware",
              "phishing"
            ]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
